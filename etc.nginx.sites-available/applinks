server {
        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;

        ssl_certificate /etc/letsencrypt/live/sample-applinks.keiji.dev/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/sample-applinks.keiji.dev/privkey.pem;
        ssl_dhparam dhparam.pem;
        ssl_ciphers  ECDHE+AESGCM:DHE+AESGCM:HIGH:!aNULL:!MD5;

        gzip off;

	root /var/www/sample-applinks;

        # Add index.php to the list if you are using PHP
        index index.html index.htm;

        server_name _;

        location / {
                try_files $uri $uri/ =404;
        }

	location ~ /.well-known/apple-app-site-association {
        	default_type application/json;
	}
}
